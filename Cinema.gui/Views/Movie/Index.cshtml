@using Cinema.gui.Models
@model List<Movie>
@{
    ViewBag.Title = "Filmy";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container page-container">
    <div class="wrapper" id="btn-panel">
        <button class="btn btn-panel">
            @Html.ActionLink("Dodaj film", "AddMovie", "Movie", new object { }, new { @class = "btn" })
        </button>
        <button class="btn btn-panel">
            @Html.ActionLink("Usun film", "RemoveMovie", "Movie", new object { }, new { @class = "btn" })
        </button>
        <button class="btn btn-panel">
            @Html.ActionLink("Modyfikuj film", "UpdateMovie", "Movie", new object { }, new { @class = "btn" })
        </button>
    </div>
    <div class="list">

    </div>
</div>
<br />
<br />
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Kategoria</th>
            <th>Kraj</th>
            <th>Rok produkcji</th>
            <th>Data premiery</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.MovieTitle</td>
            <td>@movie.MovieDescription</td>
            <td>@movie.CategoryName</td>
            <td>@movie.Country</td>
            <td>@movie.YearOfProduction</td>
            <td>@movie.DateOfPremiere</td>
            <td>@Html.ActionLink("Edytuj", "EditMovie", movie, new { @class = "btn btn-primary pull-right" }) </td>
            <td>@Html.ActionLink("Usuń", "RemoveMovie", movie, new { @class = "btn btn-primary pull-right" }) </td>
        </tr>
        }
    </tbody>
</table>

