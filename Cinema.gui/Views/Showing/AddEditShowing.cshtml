@using Cinema.gui.Models
@model ShowingAddModel
@{
    ViewBag.Title = "Dodaj seans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Dodaj seans
    </div>
    <div class="panel-body">
        @using (var form = Html.BeginForm("AddShowing", "Showing", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Showing.Id)
            <div class="form-group row">
                @Html.LabelFor(x => x.Showing.MovieId, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Showing.MovieId, Model.Movies, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Showing.MovieId, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Showing.TheatreId, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <text>1</text>
                    @Html.ValidationMessageFor(x => x.Showing.TheatreId, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Showing.ShowingDateTime, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Showing.ShowingDateTime, new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(x => x.Showing.ShowingDateTime, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <button class="btn btn-primary pull-right" type="submit">Zapisz</button>
                </div>
            </div>
        }
    </div>
</div>


