<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kino Neptun</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <!-- Main navigation Bar-->
    <nav class="navbar navbar-inverse navbar-fixed-top" id="main-navbar">
        <div class="container">
            @Html.ActionLink("Kino Neptun", "Index", "Home", new object { }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Dzis na ekranie", "Today", "Home", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Repertuar", "Repertoire", "Home", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Kino", "Cinema", "Home", new object { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container body-content">

        <div id="page-content-wrapper">
            @RenderBody()
        </div>

        <hr />
        <footer>
            <div class="panel-footer text-center">
                <p> Kino Neptun </p>
                <p>ul. Długa 26</p>
                <p>Gdańsk</p>

            </div>
            <p id="copyright">&copy; @DateTime.Now.Year - Dorota Styś</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>